{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "iscsi"
  },
  "spec": {
    "containers": [
      {
        "name": "iscsi",
        "image": "aosqe/storage",
        "securityContext": {
          "privileged": true
        },
        "imagePullPolicy": "IfNotPresent",
        "volumeMounts": [
          {
            "mountPath": "/mnt/iscsi",
            "name": "iscsi"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "iscsi",
        "iscsi": {
          "targetPortal": "#POD_IP#:3260",
          "iqn": "iqn.2016-04.test.com:storage.target00",
          "lun": 0,
          "iface": "default",
          "fsType": "ext4",
          "readOnly": false
        }
      }
    ],
    "affinity": {
      "podAffinity": {
        "requiredDuringSchedulingIgnoredDuringExecution": [
          {
            "labelSelector": {
              "matchExpressions": [
                {
                  "key": "name",
                  "operator": "In",
                  "values": [
                    "frontendhttp"
                  ]
                }
              ]
            },
            "topologyKey": "kubernetes.io/hostname"
          }
        ]
      }
    }
  }
}
