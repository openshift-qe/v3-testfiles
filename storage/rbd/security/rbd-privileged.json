{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd2"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd-rw",
                "image": "aosqe/storage",
                "securityContext": {
                    "privileged": true
                },
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/rbd",
                        "name": "rbdpd"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbdpd",
                "rbd": {
                    "monitors": [
        				"10.70.42.111:6789"
    				 ],
                    "pool": "rbd",
                    "image": "disk01",
                    "user": "admin",
                    "keyring": "/etc/ceph/keyring",
                    "secretRef": {
						  "name": "cephrbd-secret"
					 },
                    "fsType": "ext4",
                    "readOnly": false
                }
            }
        ]
    }
}
