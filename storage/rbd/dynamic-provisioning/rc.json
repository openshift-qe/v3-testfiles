{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "rbdpd"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "rbd"
        },
        "template":{
            "metadata": {
                "name": "rbd",
                "labels": {
                    "app": "rbd"
                }
            },
            "spec": {
                "containers": [{
                    "name": "myfrontend",
                    "image": "jhou/hello-openshift",
                    "imagePullPolicy": "IfNotPresent",
                    "ports": [{
                        "containerPort": 80,
                        "name": "http-server"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/mnt/rbd",
                        "name": "pvol"
                    }]
                }],
                "volumes": [{
                    "name": "pvol",
                    "persistentVolumeClaim": {
                        "claimName": "rbdc"
                    }
                }]
            }
        }
    }
}
