{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "mypod",
        "labels": {
            "name": "frontendhttp"
        }
    },
    "spec": {
        "containers": [{
            "name": "myfrontend",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "ports": [{
                "containerPort": 80,
                "name": "http-server"
            }],
            "securityContext": {
                "privileged": false
            },
            "volumeMounts": [{
                "mountPath": "/mnt/nfs",
                "name": "pvol"
            }]
        }],
        "securityContext": {
            "supplementalGroups": [10000130,12334,34],
            "runAsUser": 112,
            "fsGroup": 3333,
            "seLinuxOptions": {
                "user": "system_u",
                "role": "object_r",
                "type": "svirt_sandbox_file_t",
                "level": "s0"
            }
        },
        "volumes": [{
            "name": "pvol",
            "nfs": {
                "server": "10.66.79.133",
                "path": "/jhou",
                "readOnly": false
            }
        }]
    }
}
