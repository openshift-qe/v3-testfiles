{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "cinderpd1"
    },
    "spec": {
        "containers": [{
            "name": "myfrontend",
            "image": "aosqe/storage",
            "imagePullPolicy": "IfNotPresent",
            "ports": [{
                "containerPort": 80,
                "name": "http-server"
            }],
            "volumeMounts": [{
                "mountPath": "/mnt/cinder",
                "name": "pvol"
            }]
        }],
        "securityContext": {
            "fsGroup": 123456,
            "seLinuxOptions": {
                 "level": "s0"
            }
        },
        "volumes": [{
            "name": "pvol",
            "persistentVolumeClaim": {
                "claimName": "cinderc1"
            }
        }]
    }
}
