{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "gce",
    "creationTimestamp": null,
    "labels": {
      "name": "volume-test"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "gce",
        "image": "jhou/hello-openshift",
        "ports": [
          {
            "containerPort": 8080,
            "protocol": "TCP"
          }
        ],
        "resources": {},
        "volumeMounts": [
          {
            "name":"gcepd",
            "mountPath":"/mnt/gce"
          }
        ],
        "terminationMessagePath": "/dev/termination-log",
        "imagePullPolicy": "IfNotPresent",
        "securityContext": {
          "privileged": true
        }
      }
    ],
    "securityContext": {
         "fsGroup": 123456,
         "seLinuxOptions": {
            "level": "s0:c13,c2"
         }
    },
    "volumes": [
      {
          "name": "gcepd",
          "gcePersistentDisk": {
              "pdName": "my-data-disk",
              "fsType": "ext4"
          }
      }
    ],
    "restartPolicy": "Always",
    "dnsPolicy": "ClusterFirst",
    "serviceAccount": ""
  },
  "status": {}
}
