{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "mypod1",
        "labels": {
            "name": "frontendhttp"
        }
    },
    "spec": {
        "containers": [{
            "name": "myfrontend",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "ports": [{
                "containerPort": 80,
                "name": "http-server"
            }],
            "volumeMounts": [{
                "mountPath": "/opt",
                "name": "pvol"
            }]
        }],
        "securityContext": {
            "runAsUser": 1002234,
            "supplementalGroups": [65534]
        },
        "volumes": [{
            "name": "pvol",
            "nfs": {
                "server": "10.66.79.133",
                "path": "/jhou",
                "readOnly": false
            }
        }]
    }
}
