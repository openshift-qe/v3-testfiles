{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "nfsrc",
        "labels": {
            "name": "nfsrc"
        }
    },
    "spec": {
        "replicas": 2,
        "selector": {
            "name": "nfsrc"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name":"nfsrc"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "myfrontend",
                        "image": "aosqe/storage",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [{
                            "containerPort": 80,
                            "name": "http-server"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/opt",
                            "name": "pvol"
                        }]
                    }
                ],
                "volumes": [{
                    "name": "pvol",
                    "nfs": {
                        "server": "10.66.79.133",
                        "path": "/jhou",
                        "readOnly": false
                    }
                }]
            }
        }
    }
}
