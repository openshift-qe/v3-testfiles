{
    "apiVersion": "v1",
    "kind": "List",
    "items": [
        {
            "apiVersion": "v1",
            "kind": "ReplicationController",
            "metadata": {
                "labels": {
                    "name": "caddy-rc"
                },
                "name": "caddy-rc"
            },
            "spec": {
                "replicas": 2,
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "caddy-pods"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": "aosqe/caddy-docker",
                                "name": "caddy-pod"
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {
                    "name": "service-secure"
                },  
                "name": "service-secure"
            },
            "spec": {
                "ports": [
                    {
                        "name": "https",
                        "port": 27443,
                        "protocol": "TCP",
                        "targetPort": 8443
                    }
                ],  
                "selector": {
                    "name": "caddy-pods"
                }   
            }
        },
       {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {
                    "name": "service-unsecure"
                }, 
                "name": "service-unsecure"
            },
            "spec": {
                "ports": [
                    {
                        "name": "http",
                        "port": 27017,
                        "protocol": "TCP",
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "name": "caddy-pods"
                }
            }
        }

    ]
}

