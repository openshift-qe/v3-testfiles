{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pv01"
  },
  "spec": {
    "capacity": {
        "storage": "512Mi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "nfs": {
        "path": "/nfs",
        "server": "<nfs_server_ip>"
    },
    "persistentVolumeReclaimPolicy": "Recycle"
  }
}
