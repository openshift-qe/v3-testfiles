{
    "apiVersion": "v1",
    "kind": "DeploymentConfig",
    "metadata": {
        "creationTimestamp": null,
        "labels": {
            "template": "application-template-stibuild"
        },
        "name": "database"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "database"
        },
        "strategy": {
            "recreateParams": {
                "post": {
                    "execNewPod": {
                        "command": [
                            "/bin/false"
                        ],
                        "containerName": "mongodb-helloworld-database",
                        "env": [
                            {  
                                "name": "CUSTOM_VAR2",
                                "value": "custom_value2"
                            }
                        ]
                    },
                    "failurePolicy": "Ignore"
                },
                "pre": {
                    "execNewPod": {
                        "command": [
                            "/bin/true"
                        ],
                        "containerName": "mongodb-helloworld-database",
                        "env": [
                            {  
                                "name": "CUSTOM_VAR1",
                                "value": "custom_value1"
                            }
                        ]
                    }, 
                    "failurePolicy": "Abort"
                }
            },
            "resources": {},
            "type": "Recreate"
        },
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "name": "database"
                }
            },
            "spec": {
                "containers": [
                    {
                        "capabilities": {},
                        "env": [
                            {
                                "name": "MONGODB_USER",
                                "value": "user7BE"
                            },
                            {
                                "name": "MONGODB_PASSWORD",
                                "value": "fpBt72kI"
                            },
                            {
                                "name": "MONGODB_DATABASE",
                                "value": "root"
                            },
                        {
                                "name": "MONGODB_ADMIN_PASSWORD",
                                "value": "r00t"
                            },
                            {
                                "name": "MONGODB_NOPREALLOC",
                                "value": "false"
                            },
                            {
                                "name": "MONGODB_SMALLFILES",
                                "value": "false"
                            },
                            {
                                "name": "MONGODB_QUIET",
                                "value": "false"
                            }
                        ],
                        "image": "$registry/mongodb-24-rhel7",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "mongodb-helloworld-database",
                        "ports": [
                            {
                                "containerPort": 27017,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "securityContext": {
                            "capabilities": {},
                            "privileged": false
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "dnsPolicy": "ClusterFirst",
                "restartPolicy": "Always",
                "serviceAccount": ""
            }
        },
        "triggers": [
            {
                "type": "ConfigChange"
            }
        ]
    }, 
    "status": {}
}
