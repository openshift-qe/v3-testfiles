{
    "apiVersion": "v1",
    "kind": "DeploymentConfig",
    "metadata": {
        "creationTimestamp": null,
        "labels": {
            "template": "application-template-stibuild"
        },
        "name": "database"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "database"
        },
        "strategy": {
            "recreateParams": {
                "post": {
                    "execNewPod": {
                        "command": [
                            "/bin/false"
                        ],
                        "containerName": "postgresql-helloworld-database",
                        "env": [
                            {
                                "name": "CUSTOM_VAR2",
                                "value": "custom_value2"
                            }
                        ]
                    },
                    "failurePolicy": "Ignore"
                },
                "pre": {
                    "execNewPod": {
                        "command": [
                            "/bin/true"
                        ],
                        "containerName": "postgresql-helloworld-database",
                        "env": [
                            {
                                "name": "CUSTOM_VAR1",
                                "value": "custom_value1"
                            }
                        ]
                    },
                    "failurePolicy": "Abort"
                }
            },
            "resources": {},
            "type": "Recreate"
        },
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "name": "database"
                }
            },
            "spec": {
                "containers": [
                    {
                        "capabilities": {},
                        "env": [
                            {
                                "name": "POSTGRESQL_USER",
                                "value": "user7BE"
                            },
                            {
                                "name": "POSTGRESQL_PASSWORD",
                                "value": "fpBt72kI"
                            },
                            {
                                "name": "POSTGRESQL_DATABASE",
                                "value": "root"
                            },
                        {
                                "name": "POSTGRESQL_SHARED_BUFFERS",
                                "value": "64MB"
                            },
                            {
                                "name": "POSTGRESQL_MAX_CONNECTIONS",
                                "value": "42"
                            }
                        ],
                        "image": "registry.access.redhat.com/rhscl/postgresql-94-rhel7",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "postgresql-helloworld-database",
                        "ports": [
                            {
                                "containerPort": 3306,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "securityContext": {
                            "capabilities": {},
                            "privileged": false
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "dnsPolicy": "ClusterFirst",
                "restartPolicy": "Always",
                "serviceAccount": ""
            }
        },
        "triggers": [
            {
                "type": "ConfigChange"
            }
        ]
    },
    "status": {}
}
