{
    "kind": "DeploymentConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "nodejs",
        "creationTimestamp": null,
        "labels": {
            "name": "nodejs"
        }
    },
    "spec": {
        "strategy": {
            "type": "Recreate",
            "recreateParams": {
                "pre": {
                    "failurePolicy": "Retry",
                    "execNewPod": {
                        "command": [
                            "/bin/true"
                        ],
                        "env": [
                        ],
                        "containerName": "nodejs-sample-app"
                    }
                },
                "post": {
                    "failurePolicy": "Ignore",
                    "execNewPod": {
                        "command": [
                            "/bin/false"
                        ],
                        "env": [
                            {
                                "name": "VAR",
                                "value": "post-deployment"
                            }
                        ],
                        "containerName": "nodejs-sample-app"
                    }
                }
            },
            "resources": {}
        },
        "triggers": [
            {
                "type": "ConfigChange"
            }
        ],
        "replicas": 1,
        "selector": {
            "name": "nodejs"
        },
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "name": "nodejs"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "nodejs-sample-app",
                        "image": "$registry/builtimages/nodejs-010-sample-app-rhel7:latest",
                        "ports": [
                            {
                                "containerPort": 3306,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                        ],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "IfNotPresent",
                        "securityContext": {
                            "capabilities": {},
                            "privileged": false
                        }
                    }
                ],
                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        }
    },
    "status": {}
}
