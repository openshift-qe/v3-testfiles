{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "hello-pod",
        "labels": {
            "name": "hello-pod"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "hello-pod",
                "image": "aosqe/hello-openshift",
                "ports": [
                    {
                        "containerPort": 80
                    }
                ]
            }
        ],
        "securityContext": {
            "supplementalGroups": [
                 1000
            ],
            "fsGroup": 1001
        }
    }
}
