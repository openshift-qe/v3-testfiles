{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "glusterpd"
    },
    "spec": {
        "containers": [
            {
                "name": "glusterfs",
                "image": "jhou/hello-openshift",
                "imagePullPolicy": "IfNotPresent",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/glusterfs",
                        "name": "glusterfsvol"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "glusterfsvol",
                "glusterfs": {
                    "endpoints": "glusterfs-cluster",
                    "path": "testvol",
                    "readOnly": false
                }
            }
        ]
    }
}
