{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd",
                "image": "aosqe/hello-openshift",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/rbd",
                        "name": "rbdpd"
                    }
                ]
            }
        ],
        "securityContext": {
            "runAsUser": 1000160000,
            "fsGroup": 123456,
            "seLinuxOptions": {
                "level": "s0"
            }
        },
        "volumes": [
            {
                "name": "rbdpd",
                "rbd": {
                    "monitors": ["10.66.145.205:6789"],
                    "pool": "rbd",
                    "image": "kubernetes-dynamic-pvc-0263fd0a-f531-11e7-bb57-0050569f5abb",
                    "user": "admin",
                    "secretRef": {
                        "name": "cephrbd-user-secret"
                    },
                    "fsType": "ext4",
                    "readOnly": false
                }
            }
        ]
    }
}
